form welcome
{
    layout = LAYOUT_ABSOLUTE
    size = 100%, 100%
    batchingEnabled = false
	alignment = ALIGN_VCENTER_HCENTER

	container infoPanel
    {
		alignment = ALIGN_TOP_LEFT
 		size = 20%, 32
		position = 0, 0

		image logo
		{
			alignment = ALIGN_TOP_LEFT
			path = res/png/logo.png
			size = 32, 32
		}

		label gameEngine
		{
			alignment = ALIGN_TOP_HCENTER
			text = Game Engine
			fontSize = 16
		}	

		label version
		{
			alignment = ALIGN_BOTTOM_HCENTER
			text = 0.0.1
			fontSize = 16
		}	
	}

	container mainButtonsPanel
    {
		alignment = ALIGN_TOP_LEFT
		width = 20%

		button newProjectButton
		{
			position = 0, 50
			size = 100%, 50
			text = New Project
		}

		button openProjectButton
		{
			position = 0, 100
			size = 100%, 50
			text = Open Project
		}

		button learnButton
		{
			position = 0, 150
			size = 100%, 50
			text = Learn Game Engine
			fontSize = 15
		}

	}

	
	container projectsPanel
    {
		alignment = ALIGN_TOP_RIGHT
		position = 20%, 0
        style = Panel
		size = 80%, 100%
	}


}
